{% extends 'base.html.twig' %}
{%block title%} page formulaire {%endblock%}

{%block contenu%}
<div class="container">
   <h2>Formulaire d'Inscription</h2>
    <form action="{{path('app_add_etudiant')}}" method="post">
        <label for="nom">Nom :</label>
        <input type="text" class="form-control" id="nom" name="nom" value="" required><br>
        
        <label for="prenom">Pr√©nom :</label>
        <input type="text" class="form-control" id="prenom" name="prenom" value="" required><br>
        
        <label for="date_naissance">Date de Naissance :</label>
        <input type="date" class="form-control" id="date_naissance" name="date_naissance" value="" required><br>
        
        <label for="niveau_scolaire">Niveau Scolaire :</label>
        <input type="text"class="form-control" id="niveau_scolaire" name="niveau_scolaire" value="" required><br>
        
        <label for="module_choisir">Module choisir :</label>
