        </select><br>
        
        <label for="motif_inscription">Motif d'Inscription :</label><br>
        <textarea id="motif_inscription" class="form-control" name="motif_inscription" rows="4" cols="50" value="" required></textarea><br><br>
        
        <button type="submit" class="btn btn-primary">Soumettre</button>
    </form>
</div>
{%endblock%}